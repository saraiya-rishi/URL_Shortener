@{
    ViewBag.Title = "Password Required";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .verify-box {
            background: rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            width: 350px;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .btn {
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            width: 100%;
        }

        .error {
            color: red;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="verify-box">
        <h3>🔐 Enter Password</h3>

        @using (Html.BeginForm("Verify", "Url", FormMethod.Post))
        {
            @* @Html.Hidden("code", ViewBag.Code) *@
             <input type="hidden" name="code" value="@ViewBag.Code" /> 
        

            <input type="password" name="inputPassword" placeholder="Enter Password" required />
            <input type="submit" class="btn" value="Unlock Link" />
        }

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
    </div>
</body>
</html>
